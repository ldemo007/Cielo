package com.softwarecwb.cielo.model;

import java.io.Serializable;

import javax.xml.bind.annotation.XmlElement;
import javax.xml.bind.annotation.XmlRootElement;

import org.hibernate.validator.constraints.Length;

import com.softwarecwb.cielo.model.enumerador.Bandeira;
import com.softwarecwb.cielo.model.enumerador.CodigoProduto;

@XmlRootElement(name="forma-pagamento")
public class FormaPagamento implements Serializable {

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	private Bandeira bandeira;

	private CodigoProduto codigoProduto;

	@Length(min = 1, max = 2)
	private int numeroParcelas;

	
	public FormaPagamento(Bandeira bandeira, CodigoProduto codigoProduto, int numeroParcelas) {
		this.bandeira = bandeira;
		this.codigoProduto = codigoProduto;
		this.numeroParcelas = numeroParcelas;
	}

	public Bandeira getBandeira() {
		return bandeira;
	}

	@XmlElement(name="bandeira")
	public void setBandeira(Bandeira bandeira) {
		this.bandeira = bandeira;
	}

	@XmlElement(name="bandeira")
	public String getCodigoProduto() {
		return codigoProduto.getValor();
	}

	
	public void setCodigoProduto(CodigoProduto codigoProduto) {
		this.codigoProduto = codigoProduto;
	}

	public int getNumeroParcelas() {
		return numeroParcelas;
	}

	@XmlElement(name="parcelas")
	public void setNumeroParcelas(int numeroParcelas) {
		this.numeroParcelas = numeroParcelas;
	}

	
}
