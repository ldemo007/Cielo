package com.softwarecwb.model;

import java.math.BigDecimal;
import java.util.Date;

import org.springframework.hateoas.ResourceSupport;

public class PedidoRecurso extends ResourceSupport {

	private Long orderId;
	private Date createdAt;
	private String status;
	private BigDecimal value;

	public void copyAttributesFrom(Pedido pedido) {
		this.orderId = pedido.getId();
		this.createdAt = pedido.getCreatedAt();
		this.status = pedido.getStatus().toString();
		this.value = pedido.getValue();
	}

}
